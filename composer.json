{
    "name": "kronostechnologies/graphql-framework",
    "license": "MIT",
    "type": "library",
    "config": {
        "platform": {
            "php": "5.6"
        }
    },
    "require": {
        "php": ">=5.6",
        "psr/cache": "^1.0",
        "psr/log": "^1.0",
        "psr/http-message": "^1.0",
        "webonyx/graphql-php": "^0.11.5",
        "guzzlehttp/psr7": "^1.4",
        "overblog/dataloader-php": "^0.5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Kronos\\": "src/Kronos/",
            "Kronos\\Tests\\": "tests/Kronos/Tests/",

            "Kronos\\Mocks\\Controllers\\": "tests/Kronos/Mocks/Controllers/",
            "Kronos\\Mocks\\Schema\\": "tests/Kronos/Mocks/Schema/"
        }
    }

}
